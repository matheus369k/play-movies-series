{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "vite.config.ts",
    "jest.config.ts",
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".env.exemplo"
  ]
}